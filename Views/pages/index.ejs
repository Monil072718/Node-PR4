<%-include('../Partials/header.ejs') %>

  <div class="border-1 p-2">
    <h1 class="text-2xl font-medium text-gray-800 ">Book Lists</h1>
    <a href="/add" class="btn btn-primary ">
      Add New Book
    </a>
  </div>
  <table class="container text-center">
    <thead>
      <tr>
        <th class="border p-4">No.</th>
        <th class="border p-4">Book Title</th>
        <th class="border p-4">Book Type</th>
        <th class="border p-4">Author</th>
        <th class="border p-4">Published Year</th>
        <th class="border p-4">Stock</th>
        <th class="border p-4">Price</th>
        <th class="border p-4">Action</th>
      </tr>
    </thead>

    <tbody>
      <% if (books.length>0){ books.forEach((book,i)=>{ %>
        <tr>
          <td class="border py-1 px-2">
            <%=i+1%>
          </td>
          <td class="border py-1 px-2">
            <%= book.name %>
          </td>
          <td class="border py-1 px-2">
            <%= book.booktype %>
          </td>
          <td class="border py-1 px-2">
            <%= book.author %>
          </td>
          <td class="border py-1 px-2">
            <%= book.pyear %>
          </td>
          <td class="border py-1 px-2">
            <%= book.stock %>
          </td>
          <td class="border py-1 px-2">â‚¹ <%= book.price %>
          </td>
          <td class="border py-2 px-2">
            <a href="/edit/<%=book.id%>" class="btn btn-warning text-white rounded">Edit</a>
            <a href="/delete/<%=book.id%>" class="btn btn-danger text-white rounded">Delete</a>
          </td>
        </tr>
        <% }) } else{ %>
          <tr>
            <td colspan="8">No record found</td>
          </tr>
          <% } %>
    </tbody>
  </table>

  <%-include('../Partials/footer.ejs') %>